#!/bin/bash

# Clone or pull the repository
repo_dir="/path/to/your/repo"
repo_url="https://github.com/your_owner/your_repo.git"
branch="main"

if [ -d "$repo_dir" ]; then
    git -C "$repo_dir" pull origin "$branch"
else
    git clone -b "$branch" "$repo_url" "$repo_dir"
fi

# Restart Nginx
systemctl restart nginx
